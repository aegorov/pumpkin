<%= form_for transaction, :action => :update do |f| %>
  <div class="clearfix">
      <div class="input">
        <%= f.select :status, [["Отправлено","send" ],["Получено", "received"],["Расходуется", "use"],["Израсходовано", "finish"]] %>
      </div>
  </div>
   <div class="clearfix">
      <div class="input">
        <%= f.text_field :title, :placeholder => "Комментарий" %>
      </div>
  </div>
  <div class="actions">
     <%= f.submit "Поменять", :class => "btn primary" %>
  </div>  
<% end %>
