<%= form_for(@consumer) do |f| %>
  <% if @consumer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@consumer.errors.count, "error") %> prohibited this consumer from being saved:</h2>

      <ul>
      <% @consumer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name, "Имя" %>
	<div class="input">
    	<%= f.text_field :name %>
	</div>	
  </div>
  <div class="clearfix">
    <%= f.label :number, "Номер" %>
	<div class="input">
    	<%= f.text_field :number %>
	</div>	
  </div>
  <div class="actions">
	<% if create %>
    	<%= f.submit "Создать", :class => "btn primary" %>
	<% else %>
		<%= f.submit "Обновить", :class => "btn primary" %>
	<% end%>
  </div>
<% end %>
